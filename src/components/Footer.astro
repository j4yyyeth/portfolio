---
import Contact from "./Contact";
import DownloadResume from "./DownloadResume.astro";
import GithubBtn from "./buttons/GithubBtn.astro";
import GmailBtn from "./buttons/GmailBtn.astro";
import LinkedInBtn from "./buttons/LinkedInBtn.astro";
---

<footer>
  <svg
    viewBox="0 -20 700 110"
    width="100%"
    height="180"
    preserveAspectRatio="none"
  >
    <path
      transform="translate(0, -20)"
      d="M0,10 c80,-22 240,0 350,18 c90,17 260,7.5 350,-20 v50 h-700"
      fill="#ff3300"></path>
    <path
      d="M0,10 c80,-18 230,-12 350,7 c80,13 260,17 350,-5 v100 h-700z"
      fill="#f7f7f7"></path>
  </svg>
  <div class="footer-bottom">
    <Contact client:load />
  </div>
  <div class="social-buttons-footer">
    <>
      <GithubBtn link="https://github.com/j4yyyeth" />
      <LinkedInBtn />
      <GmailBtn />
    </>
    <>
      <DownloadResume />
    </>
  </div>
</footer>
